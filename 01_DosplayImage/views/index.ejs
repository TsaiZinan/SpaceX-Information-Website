<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="number" type="text" class="ghost-input" placeholder="Enter a Flight Number" required>
          <input type="submit" class="ghost-button" name = "vote" value="single">
        </form>

        <form action="/" method="post">
          <input name="first_number" type="text" class="ghost-input" placeholder="Enter the first flight number" required>
          <input name="last_number" type="text" class="ghost-input" placeholder="Enter the last flight number" required>
          <input type="submit" class="ghost-button" name = "vote" value="multiple">
        </form>

        <% if(result !== null){ %>
          <p><%= result %></p>
          <img src="<%= image %>" />
        <% } %>

        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>

        <% if(mutipleResult !== null){ %>
          <% for (var i = 0; i< mutipleResult.length; i++){ %>
            <p><%= mutipleResult[i] %></p>
            <img src="<%= multiimage[i] %>" />
          <% } %>
        <% } %>

      </fieldset>
    </div>
    
  </body>
</html>


